/* pages/record/record.wxss */
.content {
position:relative;
width:750rpx;
height:100%;
/* background: url('http://ecc-product.oss-cn-beijing.aliyuncs.com/xcx/CustomerServices.png') no-repeat left top; */
background: #eee;
background-size: 100% 100%;
display: block;
}
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.content .weui-tab__content{
    padding-top: 60px;
    text-align: center;
}
.content .weui-navbar__item.weui-bar__item_on {
  color: #ED4C4C;
}
.content .weui-navbar__slider {
  background: #ED4C4C;
}
.content .weui-tab__content {
  padding-top: 52rpx;
}
.content .warp {
  width: 580rpx;
  height: 830rpx;
  background:#fff;
  display: block;
  margin: 0 auto;
  overflow: hidden;
}
.warp_h1 {
  font-size: 32rpx;
  padding: 50rpx 0;
  text-align: left;
  text-indent: 44rpx;
}
.warp_h2 {
  width: 100%;
  height: 112rpx;
  border-bottom: 1rpx dashed #DFDFDF;
  position: relative;
}
.warp_h2_img {
  width: 72rpx;
  height: 62rpx;
  position: absolute;
  left: 45rpx;
  top: 0rpx;
  font-size: 60rpx;
}
.warp_h2_img image {
  width: 72rpx;
  height: 62rpx;
}
.warp_h2_text {
  width: 415rpx;
  height: 112rpx;
  line-height: 112rpx;
  font-size: 44rpx;
  color: #909090;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-left: 150rpx;
  text-align: left;
}
.warp_h3 {
  width: 100%;
  height: 82rpx;
  line-height: 82rpx;
  text-align: left;
  border-bottom: 1rpx dashed #DFDFDF;
}
.warp_h3_left {
  float: left;
  width: 70%;
  height: 82rpx;
  line-height: 82rpx;
}
.h3_input {
  display: block;
  /* padding-top: 15rpx; */
  height: 82rpx;
  line-height: 82rpx;
  text-align: left;
  padding-left: 44rpx;
  color: #888888;
}
.warp_h3_right {
  width: 42rpx;
  height: 40rpx;
  float: right;
  margin-top: 20rpx;
  margin-right: 30rpx;
}
.warp_h3_right image {
  width: 100%;
  height: 100%;
  display: block;
}

.warp_h4 {
  width: 210rpx;
  height: 210rpx;
  margin: 74rpx auto 10rpx auto;
}
.warp_h4 image {
  width: 210rpx;
  height: 210rpx;
  display: flex;
}
.warp_h5 {
  display:flex;
  margin-top: 90rpx;
}
.warp_h5 span {
  display: block;
  flex: 1;
  color: #FC5B84;
}